    <!-- Top menu item -->

    <menuitem name="Gestor Tareas" id="gestion_tareas_quique.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Proyectos" id="gestion_tareas_quique.proyectos" parent="gestion_tareas_quique.menu_root" sequence="10"/>
    <menuitem name="Historias" id="gestion_tareas_quique.historias" parent="gestion_tareas_quique.menu_root" sequence="20"/>
    <menuitem name="Tareas" id="gestion_tareas_quique.tareas" parent="gestion_tareas_quique.menu_root" sequence="30"/>
    <menuitem name="Sprints" id="gestion_tareas_quique.sprints" parent="gestion_tareas_quique.menu_root" sequence="40"/>



    <!-- actions -->

    <menuitem name="List" id="gestion_tareas_quique.tareas_list" parent="gestion_tareas_quique.tareas"
              action="gestion_tareas_quique.action_tareas_window"/>

    <menuitem name="Listado Sprints" id="gestion_tareas_quique.sprints_list" parent="gestion_tareas_quique.sprints"
              action="gestion_tareas_quique.action_sprints_window"/>
    
    <menuitem name="Listado Historias" id="gestion_tareas_quique.historias_list" parent="gestion_tareas_quique.historias"
              action="gestion_tareas_quique.action_historias_window"/>
      
    <menuitem name="Listado Proyectos" id="gestion_tareas_quique.proyectos_list" parent="gestion_tareas_quique.proyectos"
              action="gestion_tareas_quique.action_proyectos_window"/>
    

  </data>
</odoo>
