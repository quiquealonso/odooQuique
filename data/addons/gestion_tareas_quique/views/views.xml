<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestion_tareas_quique.list">
      <field name="name">tareas_quique list</field>
      <field name="model">gestion_tareas_quique.tareas_quique</field>
      <field name="arch" type="xml">
        <list>
          <field name ="codigo"/>
          <field name="nombre"/>
          <field name="descripcion"/>
          <field name="finalizado"/>
          <field name ="proyecto_ids"/>
        </list>
      </field>
    </record>

  <record model="ir.ui.view" id="gestion_tareas_quique.form">
      <field name="name">tareas_quique list</field>
      <field name="model">gestion_tareas_quique.tareas_quique</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
             <field name="codigo"/>
              <field name="nombre"/>
              <field name="descripcion"/>
              <field name="finalizado"/>
              <field name ="historia"/>
              <field name ="proyecto_ids"/>
            </group>
            <group>
              <field name="fecha_creacion"/>
              <field name="fecha_ini"/>
              <field name="fecha_fin"/>
              <field name="sprint"/>
              <field name="rel_tecnologias" widget="many2many_tags"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestion_tareas_quique.action_tareas_window">
      <field name="name">gestion_tareas_quique window</field>
      <field name="res_model">gestion_tareas_quique.tareas_quique</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gestion_tareas_quique.action_sprints_window">
      <field name="name">gestion_sprints_quique window</field>
      <field name="res_model">gestion_tareas_quique.sprints_quique</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gestion_tareas_quique.action_historias_window">
      <field name="name">gestion_historias_quique window</field>
      <field name="res_model">gestion_tareas_quique.historias_quique</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gestion_tareas_quique.action_proyectos_window">
      <field name="name">gestion_proyectos_quique window</field>
      <field name="res_model">gestion_tareas_quique.proyectos_quique</field>
      <field name="view_mode">list,form</field>
    </record>


    <!-- server action to the one above -->
